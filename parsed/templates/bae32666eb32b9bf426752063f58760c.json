{"components/sbthemes/custom/latest_blog":"\r\n\r\n<div class=\"module latest-blog-slider\" >\r\n\t<div class=\"modtitle text-center\">\r\n        <h3>{{lang 'simolux.latest_blog.heading' }}</h3>\r\n        <p class=\"subtitle \">{{lang 'simolux.latest_blog.subheading' }}</p>\r\n    </div>\r\n    <div class=\"modcontent\">\r\n    \t<div class=\"latest-blog--carousel\"\r\n    \t\tdata-slick='{\r\n\t\t        \"dots\": false,\r\n\t\t        \"infinite\": true,\r\n\t\t        \"mobileFirst\": true,\r\n\t\t        \"slidesToShow\": 1,\r\n\t\t        \"slidesToScroll\": 1,\r\n\t\t        \"responsive\": [\r\n\t\t            {\r\n\t\t                \"breakpoint\": 1260,\r\n\t\t                \"settings\": {\r\n\t\t                    \"slidesToScroll\": 1,\r\n\t\t                    \"slidesToShow\": 3\r\n\t\t                }\r\n\t\t            },\r\n\t\t            {\r\n\t\t                \"breakpoint\": 800,\r\n\t\t                \"settings\": {\r\n\t\t                    \"slidesToScroll\": 1,\r\n\t\t                    \"slidesToShow\": 3\r\n\t\t                }\r\n\t\t            },\r\n\t\t            {\r\n\t\t                \"breakpoint\": 550,\r\n\t\t                \"settings\": {\r\n\t\t                    \"slidesToScroll\": 1,\r\n\t\t                    \"slidesToShow\": 1\r\n\t\t                }\r\n\t\t            }\r\n\t\t        ]\r\n\t\t    }'\r\n    \t>\r\n    \t\t\r\n    \t\t{{#each blogs}}\r\n\t\t    <div class=\"productCarousel-slide\">\r\n\t\t        {{> components/sbthemes/custom/latest_blog_item post=this settings=../settings}}\r\n\r\n\t\t    </div>\r\n\t\t    {{/each}}\r\n\r\n\t\t\t\r\n\t\t</div>\r\n    </div>\r\n   \r\n</div>\n","components/sbthemes/custom/latest_blog_item":" <article class=\"blog-post \">\r\n\t\t\t\t    \r\n\r\n    <div class=\"blog-post-figure\">\r\n        {{#if post.thumbnail}}\r\n            <figure class=\"blog-thumbnail\">\r\n                <a href=\"{{post.url}}\">\r\n                    <img src=\"{{getImage post.thumbnail 'blog_size' }}\" alt=\"{{post.thumbnail.alt}}\" title=\"{{post.thumbnail.alt}}\">\r\n                </a>\r\n            </figure>\r\n        {{/if}}\r\n    </div>\r\n    <div class=\"blog-header\">\r\n    \t<p class=\"blog-date\"><i class=\"fa fa-clock-o\"></i> {{post.date_published}}</p>\r\n\r\n        <h2 class=\"blog-title\">\r\n            <a href=\"{{post.url}}\">{{post.title}}</a>\r\n        </h2>\r\n\r\n    </div> \r\n\r\n    <div class=\"blog-post-body\">\r\n        <p>\r\n        {{#if post.body}}\r\n            {{{post.body}}}\r\n        {{else}}\r\n            {{post.summary}}\r\n             &hellip; \r\n        {{/if}}\r\n        </p>\r\n        <div class=\"clear\"></div>\r\n        {{#if post.show_read_more}}\r\n                   <a href=\"{{url}}\" class=\"btn btn-secondary btn--readmore\">read more</a>\r\n        {{/if}}\r\n\r\n        {{#if show_tags}}\r\n            {{#if post.tags}}\r\n                <ul class=\"tags\">\r\n                    {{#each post.tags}}\r\n                    <li class=\"tag\">\r\n                        <a href=\"{{url}}\">#{{name}}</a>\r\n                    </li>\r\n                    {{/each}}\r\n                </ul>\r\n            {{/if}}\r\n        {{/if}}\r\n\r\n\r\n    </div>\r\n</article>\n"}
