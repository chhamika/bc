{"components/category/sort-box":"<div class=\"float-right actionBar-section\">\n    <div class=\"form-field\">\n        <label class=\"form-label\" for=\"sort\">{{lang 'common.sorter.sort_by'}}</label>\n        <select class=\"form-select form-select--small\" name=\"sort\" id=\"sort\">\n            <option value=\"featured\" {{#if sort '==' 'featured'}}selected{{/if}}>{{lang 'common.sorter.featured'}}</option>\n            <option value=\"newest\" {{#if sort '==' 'newest'}}selected{{/if}}>{{lang 'common.sorter.newest'}}</option>\n            <option value=\"bestselling\" {{#if sort '==' 'bestselling'}}selected{{/if}}>{{lang 'common.sorter.top_sellers'}}</option>\n            <option value=\"alphaasc\" {{#if sort '==' 'alphaasc'}}selected{{/if}}>{{lang 'common.sorter.alpha_asc'}}</option>\n            <option value=\"alphadesc\" {{#if sort '==' 'alphadesc'}}selected{{/if}}>{{lang 'common.sorter.alpha_desc'}}</option>\n            <option value=\"avgcustomerreview\" {{#if sort '==' 'avgcustomerreview'}}selected{{/if}}>{{lang 'common.sorter.reviews'}}</option>\n            <option value=\"priceasc\" {{#if sort '==' 'priceasc'}}selected{{/if}}>{{lang 'common.sorter.price_asc'}}</option>\n            <option value=\"pricedesc\" {{#if sort '==' 'pricedesc'}}selected{{/if}}>{{lang 'common.sorter.price_desc'}}</option>\n            {{#if result_count}}\n                <option value=\"relevance\" {{#if sort '==' 'relevance'}}selected{{/if}}>{{lang 'common.sorter.relevance'}}</option>\n            {{/if}}\n        </select>\n    </div>\n</div>\n\n","components/products/filter":"<form class=\" row filters-panel\" method=\"get\" data-sort-by>\n\t<div class=\"col-sm-6 view-mode\" data-reinitView=\"{{theme_settings.product_list_display_mode}}\">\n\t\t<div class=\"sidebar-overlay\"></div>\n\t\t<a href=\"javascript:void(0)\" class=\"open-sidebar d-md-block d-lg-none\"><i class=\"fa fa-bars\"></i> {{lang 'sb_themes.categories.sidebar' }} </a>\n\t\t\n\t\t<div class=\"list-view\">\n\t\t\t<div class=\"btn btn-gridview\">{{lang 'sb_themes.categories.gridview' }} </div>\n\t\t\t<button type=\"button\" id=\"grid-view-2\" class=\"btn btn-view d-none d-xl-block\">2</button>\n\t\t  \t<button type=\"button\" id=\"grid-view-3\" class=\"btn btn-view d-none d-xl-block\">3</button>\n\t\t  \t<button type=\"button\" id=\"grid-view-4\" class=\"btn btn-view d-none d-xl-block\">4</button>\n\t\t\t<button type=\"button\" id=\"grid-view\" class=\"btn btn-view grid d-md-block d-xl-none\" title=\"{{ button_grid }}\"><i class=\"fa fa-th-large\"></i></button>\n\t\t\t<button type=\"button\" id=\"list-view\" class=\"btn btn-view list \" title=\"{{ button_list }}\"><i class=\"fa fa-bars\"></i></button>\n\t\t\t<button type=\"button\" id=\"table-view\" class=\"btn btn-view d-none d-xl-block\"><i class=\"fa fa-table\" aria-hidden=\"true\"></i></button>\n\t\t\t\n\t\t</div>\n\t</div>\n\t<div class=\"short-by-show col-sm-6 col-xs-12 \">\n    \t{{> components/category/sort-box sort=sort}}\n\t</div>\n</form>\n"}
