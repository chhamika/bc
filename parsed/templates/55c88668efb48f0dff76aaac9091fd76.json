{"components/sbthemes/module/sb_latest_blog/item":" <article class=\"blog-post product-grid\">\r\n\t\t\t\t    \r\n    {{#if post.thumbnail}}\r\n    <div class=\"blog-post-figure\">\r\n        \r\n            <figure class=\"blog-thumbnail\">\r\n                <a href=\"{{post.url}}\">\r\n                    <img data-sizes=\"auto\" class=\"img-fluid lazyload \" src=\"{{cdn '/assets/img/loading.svg'}}\" data-src=\"{{getImage post.thumbnail 'blog_size' (cdn theme_settings.default_image_product)}}\" alt=\"{{post.thumbnail.alt}}\" title=\"{{post.thumbnail.alt}}\">\r\n                </a>\r\n            </figure>\r\n       \r\n    </div>\r\n     {{/if}}\r\n     \r\n    <div class=\"blog-header\">\r\n        <h2 class=\"blog-title\">\r\n            <a href=\"{{post.url}}\">{{post.title}}</a>\r\n        </h2>\r\n        <div class=\"blog-meta\">\r\n            <span class=\"blog-author\"><i class=\"fa fa-user\"></i>{{post.author}}</span>\r\n            <span class=\"blog-date\"><i class=\"fa fa-clock-o\"></i>{{post.date_published}}</span>\r\n        </div>\r\n\r\n    </div> \r\n\r\n    <div class=\"blog-post-body\">\r\n        {{#if show_desc '==' 'yes'}}\r\n    \t\t{{#unless hide_summary}}\r\n            <p class=\"article-description \">\r\n            {{#if post.body}}\r\n                {{{post.body}}}\r\n            {{else}}\r\n                {{post.summary}}\r\n                 &hellip; \r\n            {{/if}}\r\n            </p>\r\n            {{/unless}}\r\n\t\t{{/if}}\r\n\t\t\r\n        <div class=\"clear\"></div>\r\n\r\n   \r\n\r\n        {{#if show_tags}}\r\n            {{#if post.tags}}\r\n                <ul class=\"tags\">\r\n                    {{#each post.tags}}\r\n                    <li class=\"tag\">\r\n                        <a href=\"{{url}}\">#{{name}}</a>\r\n                    </li>\r\n                    {{/each}}\r\n                </ul>\r\n            {{/if}}\r\n        {{/if}}\r\n\r\n       \r\n    </div>\r\n</article>\r\n"}
