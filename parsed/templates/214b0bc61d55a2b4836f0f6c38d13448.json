{"components/products/options/product-list-dropdown":"<div class=\"form-field\" data-product-attribute=\"product-list\" style=\"margin-bottom: 0px;\">\r\n    <label class=\"form-label form-label--alternate form-label--inlineSmall\" for=\"attribute_{{id}}\" style=\"margin-bottom: 0rem; margin-top: 0.77rem;\">\r\n        {{ this.display_name }}:\r\n\r\n        {{#if required}}\r\n        <small>{{lang 'common.required'}}</small>\r\n        {{/if}}\r\n    </label>\r\n    <div style=\"width: 100%;\">\r\n        <div style=\"width: 15%; float: left\">\r\n            <figure class=\"productOptions-list-item-figure\">\r\n                <img class=\"productOptions-list-item-image\" id=\"attribute_{{id}}_img\" data-sizes=\"auto\" style=\"max-height: 35px;\" src=\"{{cdn 'img/loading.svg'}}\">\r\n            </figure>\r\n        </div>\r\n        <div style=\"width: 85%; float: left\">\r\n    <select class=\"form-select form-select--small custom-kit-select\" name=\"attribute[{{this.id}}]\" id=\"attribute_{{id}}\" style=\"max-width: 100%; margin-top: 3px; margin-bottom: 3px\">\r\n    {{#if required}}\r\n        {{else}}\r\n        <option value=\"\" data-img-src=\"{{cdn 'img/info.png'}}\" selected=\"selected\">No, thanks!</option>\r\n    {{/if}}\r\n    {{#each values}}\r\n        <option data-product-attribute-value=\"{{id}}\" value=\"{{id}}\" data-img-src=\"{{getImage image 'productthumb_size'}}\" {{#if selected}}selected data-default{{/if}}>{{label}}</option>\r\n    {{/each}}\r\n    </select>\r\n            <script>\r\n\r\n            </script>\r\n    </div>\r\n    </div>\r\n</div>\r\n<script>\r\n    $(\"#attribute_{{id}}\").bind(\"change\", function(){\r\n        $('#attribute_{{id}}_img').attr(\"src\", $(this).find(':selected').attr('data-img-src'));\r\n    });\r\n    $('#attribute_{{id}}_img').attr(\"src\", $(\"#attribute_{{id}}\").find(\":selected\").attr('data-img-src').toString());\r\n</script>\n"}
